<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Clearpay_ClearpayEurope::css/clearpay.css"/>
		<link src="Clearpay_ClearpayEurope::js/view/cart/clearpay-cart.js"/>
    </head>
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Clearpay\ClearpayEurope\Block\Cart\Button" name="clearpayeu.cart.buynow" after="checkout.cart.shortcut.buttons" template="Clearpay_ClearpayEurope::clearpay/cart.phtml" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="clearpayeu.modal.popup" after="-" template="Clearpay_ClearpayEurope::clearpay/modal.phtml" />
        </referenceContainer>
    </body>
</page>
