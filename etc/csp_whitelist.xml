<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="clearpay-sandbox-consumer-portal" type="host">https://portal.sandbox.clearpay.co.uk</value>
                <value id="clearpay-production-consumer-portal" type="host">https://portal.clearpay.co.uk</value>
                <value id="clearpay-cdn" type="host">https://static.afterpay.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="clearpay-cdn-connect" type="host">static.afterpay.com</value>
            </values>
        </policy>
		    <policy id="style-src">
        		<values>
            		<value id="clearpay-cdn-style" type="host">static.afterpay.com/</value>
        		</values>
    	  </policy>
		    <policy id="img-src">
            <values>
                 <value id="clearpay-cdn-base" type="host">https://static.afterpay.com</value>           
            </values>
        </policy>
    </policies>
</csp_whitelist>
